<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <ul>
      <% if(todo.length){ %>
        <%todo.forEach(item => {%>
          <li>
            <%= item.todo %> - <%= item.done ? "Done." : "Not Done"%>
            <form action="/<%= todo.indexOf(item) %>?_method=DELETE" method="POST"><input type="submit" value="Delete To-do"></form>
          </li>
        <%})%>
    </ul>
    <%} else {%>
      <h2>There are no To-Dos yet!</h2>
    <%}%>

    <form action="/" method="POST">
      <input type="text" name="todo">
      <input type="submit" value="Add To-Do">
    </form>
  </body>
</html>
